<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="vert_purchasequotation_report_extend" inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//div[@class='page']/p[@t-field='o.notes']" position="before">
                <div class="row mt32 mb32" style="font-size:85%">
                    <div class="col-xs-3" t-if="o.partner_id.supp_acc_ref">
                        <strong>Supplier Ref. No:</strong>
                        <p t-field="o.partner_id.supp_acc_ref"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Incoterms 2010:</strong>
                        <p t-field="o.incoterm_id"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Incoterms Place:</strong>
                        <p t-field="o.inco_name"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Availability:</strong>
                        <p t-field="o.availibility"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Shipping Duration:</strong>
                        <p t-field="o.ship_dur"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Quotation Validity:</strong>
                        <p  t-field="o.quot_validity"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Payment Term:</strong>
                        <p  t-field="o.payment_term_id"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Deposits:</strong>
                        <p t-field="o.deposit"/>
                    </div>
                    <div class="col-xs-10">
                        <strong>Balance Payble:</strong>
                        <p t-field="o.bal_pay"/>
                        <br/>
                    </div>
                    <div style="page-break-after:auto"></div>
                    <div class = "col-xs-12">
                        <strong>Rate of Exchange:</strong>
                        <p align = "justify" t-field = "o.ex_rate"/><br/>
                        <strong>Forward Exchange Contract:</strong>
                        <p align = "justify" t-field = "o.ex_contract"/>
                    </div>
                </div>
            </xpath>
        </template>
        <template id="vert_purchaseorder_report_extend" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[@class='page']/p[@t-field='o.notes']" position="after">
                <br/>
                <div class="row mt32 mb32" style="font-size:85%">
                    <div class="col-xs-4" t-if="o.partner_id.supp_acc_ref">
                        <strong>Supplier Ref. No:</strong>
                        <p t-field="o.partner_id.supp_acc_ref"/>
                    </div>
                    <div class="col-xs-4">
                        <strong>Incoterms 2010:</strong>
                        <p t-field="o.incoterm_id"/>
                    </div>
                    <div class="col-xs-4">
                        <strong>Incoterms Place:</strong>
                        <p t-field="o.inco_name"/>
                    </div>
                    <div class="col-xs-4">
                        <strong>Availability:</strong>
                        <p t-field="o.availibility"/>
                    </div>
                    <div class="col-xs-4">
                        <strong>Shipping Duration:</strong>
                        <p t-field="o.ship_dur"/>
                    </div>
                    <div class="col-xs-4">
                        <strong>Quotation Validity:</strong>
                        <p  t-field="o.quot_validity"/>
                    </div>
                    <div class="col-xs-4">
                        <strong>Payment Term:</strong>
                        <p  t-field="o.payment_term_id"/>
                    </div>
                    <div class="col-xs-4">
                        <strong>Deposits:</strong>
                        <p t-field="o.deposit"/>
                    </div>
                    <div class="col-xs-4">
                        <strong>Balance Payble:</strong>
                        <p t-field="o.bal_pay"/><br/>
                    </div>
                    <div class = "col-xs-12">
                        <strong>Rate of Exchange:</strong>
                        <p align = "justify" t-field = "o.ex_rate"/><br/>
                        <strong>Forward Exchange Contract:</strong>
                        <p align = "justify" t-field = "o.ex_contract"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@class='page']/div[@class='row mt32 mb32']" position="replace">
                <div class="row mt32 mb32" style="font-size:85%">
                <div t-if="o.name" class="col-xs-3">
                    <strong>Our Order Reference:</strong>
                    <p t-field="o.name"/>
                </div>
                <div t-if="o.partner_ref" class="col-xs-3">
                    <strong>Your Order Reference</strong>
                    <p t-field="o.partner_ref"/>
                </div>
                <div t-if="o.date_order" class="col-xs-3">
                    <strong>Order Date:</strong>
                    <p t-field="o.date_order"/>
                </div>
                <div t-if="o.validator" class="col-xs-3">
                    <strong>Validated By:</strong>
                    <p t-field="o.validator"/>
                </div>
            </div>
            </xpath>
            <xpath expr="//div[@class='page']/table[@class='table table-condensed']" position="replace">
                <table class="table table-condensed table-bordered">
                <thead>
                    <tr>
                        <th rowspan="2">Date</th>
                        <th rowspan="2">Source</th>
                        <th rowspan="2">Supplier</th>
                        <th rowspan="2">Product</th>
                        <th rowspan="2">Total Quantity Ordered</th>
                        <th rowspan="2">Total Quantity Received</th>
                        <th colspan="2">Total Quantity Pending</th>
                        <th rowspan="2">GIT Vessel</th>
                        <th rowspan="2">Status</th>
                        <th rowspan="2">Date Received</th>
                        <th rowspan="2">GIT Container</th>
                        <th rowspan="2">GIT ETA</th>
                        <th rowspan="2">GIT QTY</th>
                        <th rowspan="2">1.Client</th>
                        <th rowspan="2">1.QTY</th>
                        <th rowspan="2">1.SO Ref</th>
                        <th rowspan="2">Total Outgoing Qty</th>
                        <th rowspan="2">Unallocated Available</th>
                    </tr>
                    <tr>
                        <th>Total Quantity Goods In Transit</th>
                        <th>Total Quantity to Be Produced</th>
                    </tr>
                </thead>
                </table>
            </xpath>
        </template>
    </data>
</openerp>
